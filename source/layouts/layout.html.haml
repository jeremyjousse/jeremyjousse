!!!
%html
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %title= current_page.data.title || 'The Middleman'
    -# = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.css'
    = stylesheet_link_tag 'sport-font/flaticon'
    = stylesheet_link_tag 'site'
  %body{ class: page_classes }
    = partial 'partials/header'
    = yield
    = partial 'partials/footer'
    = partial 'partials/analytics'
    = javascript_include_tag 'https://code.jquery.com/jquery-2.2.0.js'
    = javascript_include_tag 'https://cdn.jsdelivr.net/skrollr/0.6.30/skrollr.min.js'
    = javascript_include_tag 'all.js'
    - if current_page.data.has_gmap == true
      = javascript_include_tag 'googleMaps.js'
